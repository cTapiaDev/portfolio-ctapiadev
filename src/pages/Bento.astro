---
import Card from "../components/Card.astro";
import ImageBento from "../components/ImageBento.astro";
---

<section>
    <Card class="w-1/4 h-1/3">
        <ImageBento src="/src/spartan.jpg" alt="spartan.jpg not found" />
    </Card>
    <Card class="w-1/4 h-1/3">
        <ImageBento src="/src/astarthe.jpg" alt="astarthe.jpg not found" />
    </Card>
    <Card class="w-2/4 h-1/3">
        <ImageBento src="/src/espada.jpg" alt="espada.jpg not found" />
    </Card>
    <div class="w-full h-2/3 flex flex-wrap">
        <Card class="w-1/4 h-full">
            <ImageBento src="/src/davinci.jpg" alt="davinci.jpg not found" />
        </Card>
        <div class="w-3/4 h-full flex flex-wrap">
            <Card class="w-2/3 h-2/4">
                <div class="flex size-full justify-center items-center">
                    <h1 class="flex flex-col text-center">
                        <span style="color:var(--color-light)" class="text-8xl tracking-wider">Carlos Tapia</span>
                        <span style="color:var(--color-primary)" class="text-5xl tracking-wide">Software Developer</span>
                    </h1>
                </div>
            </Card>
            <Card class="w-1/3 h-2/4">
                <ImageBento src="/src/cruz.jpg" alt="cruz.jpg not found" />
            </Card>
            <Card class="w-2/3 h-2/4">
                <ImageBento src="/src/mapa.jpg" alt="mapa.jpg not found" />
            </Card>
            <Card class="w-1/3 h-2/4">
                <ImageBento src="/src/arte.jpg" alt="arte.jpg not found" />
            </Card>
        </div>	
    </div>
</section>