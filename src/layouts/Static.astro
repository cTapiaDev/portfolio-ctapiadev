---
import GithubIcon from "../assets/icon/GithubIcon.astro";
import InstagramIcon from "../assets/icon/InstagramIcon.astro";
import LinkedinIcon from "../assets/icon/LinkedinIcon.astro";
import TiktokIcon from "../assets/icon/TiktokIcon.astro";
---

<header class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24">
    <div>
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
            <a href="/">Carlos Tapia</a>
        </h1>
        <h2 class="mt-3 text-lg font-medium tracking-tight sm:text-xl">
            Desarrollador de Software
        </h2>
        <p class="mt-4 max-w-xs leading-normal">
            Avanzando hacía el futuro, un byte a la vez, con visión y pasión.
        </p>
        <nav class="hidden lg:block">
            <ul class="mt-16 w-max">
                <li>
                    <a id="navAbout" class="group flex items-center py-3 active" href="#about">
                        <span class="nav-indicator mr-4 h-px w-8 bg-slate-600 transition-all group-hover:w-16 group-hover:bg-slate-200 group-focus-visible:w-16 group-focus-visible:bg-slate-200 motion-reduce:transition-none"></span>
                        <span class="nav-text text-xs font-bold uppercase tracking-widest text-slate-500 group-hover:text-slate-200 group-focus-visible:text-slate-200">
                            Sobre mí
                        </span>
                    </a>
                </li>
                <li>
                    <a id="navExp" class="group flex items-center py-3" href="#exp">
                        <span class="nav-indicator mr-4 h-px w-8 bg-slate-600 transition-all group-hover:w-16 group-hover:bg-slate-200 group-focus-visible:w-16 group-focus-visible:bg-slate-200 motion-reduce:transition-none"></span>
                        <span class="nav-text text-xs font-bold uppercase tracking-widest text-slate-500 group-hover:text-slate-200 group-focus-visible:text-slate-200">
                            Experiencia
                        </span>
                    </a>
                </li>
                <li>
                    <a class="group flex items-center py-3" href="#">
                        <span class="nav-indicator mr-4 h-px w-8 bg-slate-600 transition-all group-hover:w-16 group-hover:bg-slate-200 group-focus-visible:w-16 group-focus-visible:bg-slate-200 motion-reduce:transition-none"></span>
                        <span class="nav-text text-xs font-bold uppercase tracking-widest text-slate-500 group-hover:text-slate-200 group-focus-visible:text-slate-200">
                            Proyectos
                        </span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <ul class="ml-1 mt-8 flex items-center">
        <li class="mr-5 text-xs shrink-0">
            <a class="block hover:text-slate-200" href="https://github.com/cTapiaDev" target="__blank" title="GitHub"><GithubIcon /></a>
        </li>
        <li class="mr-5 text-xs shrink-0">
            <a class="block hover:text-slate-200" href="https://www.linkedin.com/in/ctapiadev" target="__blank" title="Linkedin"><LinkedinIcon /></a>
        </li>
        <li class="mr-5 text-xs shrink-0">
            <a class="block hover:text-slate-200" href="https://www.instagram.com/ctapiadev.web/" target="__blank" title="Instagram"><InstagramIcon /></a>
        </li>
        <li class="mr-5 text-xs shrink-0">
            <a class="block hover:text-slate-200" href="https://www.tiktok.com/@ctapiadev.web" target="__blank" title="TikTok"><TiktokIcon /></a>
        </li>
    </ul>
</header>

<style>
    .active .nav-indicator {
        width: 4rem;
        background-color: rgba(226, 232, 240, 1);
    }

    .active .nav-text {
        color: rgba(226, 232, 240, 1);
    }
</style>

<script>
    const about = document.querySelector('#navAbout');
    const exp = document.querySelector('#navExp');

    const nav = [about, exp];

    nav.map((e) => {
        e.addEventListener('click', () => {
            cleanNav();
            e.classList.add('active');
        });
    });

    function cleanNav() {
        nav.forEach((e) => {
            e.classList.remove('active');
        })
    }
</script>