---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="leading-relaxed antialised">
		<div class="relative">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'anka';
		src: url('./../assets/font/anka-coder.ttf');
	}

	@font-face {
		font-family: 'inter';
		src: url('./../assets/font/InterVariable.woff2');
	}

	:root {
		/* --color-bg: #1c1a1f;
		--color-bg-op: rgba(28, 26, 31, 0.75);
		--color-primary: rgb(207, 0, 106);
		--color-primary-op: rgba(207, 0, 106, 0.10);
		--color-light: #E2E8F0;
		--color-text: #94A3B8;
		--color-pill: rgb(213, 103, 159); */
		
		/* Light Theme */
		/* --color-bg: rgb(248, 249, 253);
		--color-bg-op: rgba(248, 249, 253, 0.75);
		--color-primary: #23C55E;
		--color-primary-op: rgba(35, 197, 94, .2);
		--color-text: #171D29;
		--color-light: #F8F9FD;
		--color-dark: rgb(23, 29, 41);
		--color-dark-op: rgba(23, 29, 41, 0.75);
		--color-pill: #23c55e; */

		/* Dark Theme */
		--color-bg: rgb(23, 29, 41);
		--color-bg-op: rgba(23, 29, 41, 0.75);
		--color-primary: #23C55E;
		--color-primary-op: rgba(35, 197, 94, .2);
		--color-text: #F8F9FD;
		--color-light: rgb(23, 29, 41);
		--color-dark: rgb(248, 249, 253);
		--color-dark-op: rgba(28, 26, 31, 0.75);
		--color-pill: rgb(35, 197, 94);
		

		--font-general: 'inter';
		--font-code: 'anka';

		--font-size: 16px;
	}

	::-webkit-scrollbar {
		width: 6px;
	}

	::-webkit-scrollbar-thumb {
		width: 4px;
		background-color: var(--color-pill);
	}

	::-webkit-scrollbar-track {
		width: 8px;
		background-color: var(--color-bg);
	}

	html {
		font-family: var(--font-general);
		overflow-x: hidden;
	}

	body {
		background-color: var(--color-bg);
		font-size: var(--font-size);
		color: var(--color-text);
	}
	
	:where(h1, h2) {
		color: var(--color-text);
	}

	a {
		cursor: pointer;
	}

	p { 
		text-wrap: balance;
	}

	li {
		list-style-type: none;
	}

	.bg-blur {
		background-color: var(--color-bg-op);
	}
	
</style>
