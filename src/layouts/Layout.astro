---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="leading-relaxed antialised">
		<div class="relative">
			<div class="pointer-events-none fixed inset-0 z-30 transition duration-300 lg:absolute" style="background:radial-gradiente(600px at 706px 396, rgba(29, 78, 216, 0.15), transparent 80%);"></div>
			<slot />
		</div>
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'anka';
		src: url('./../assets/font/anka-coder.ttf');
	}

	@font-face {
		font-family: 'inter';
		src: url('./../assets/font/InterVariable.woff2');
	}

	:root {
		--color-bg: #1c1a1f;
		--color-bg-op: rgba(28, 26, 31, 0.75);
		--color-primary: #CF006A;
		--color-light: #E2E8F0;
		--color-text: #94A3B8;

		--font-general: 'inter';
		--font-code: 'anka';

		--font-size: 16px;
	}

	::-webkit-scrollbar {
		width: 6px;
	}

	::-webkit-scrollbar-thumb {
		width: 4px;
		background-color: var(--color-primary);
	}

	::-webkit-scrollbar-track {
		width: 8px;
		background-color: var(--color-bg);
	}

	*,
	*::after,
	*::before {
		margin: 0;
		padding: 0;
		box-sizing: content-box;
	}

	html {
		font-family: var(--font-general);
		overflow-x: hidden;
	}

	body {
		background-color: var(--color-bg);
		font-size: var(--font-size);
		color: var(--color-text);
	}
	
	:where(h1, h2) {
		color: var(--color-light);
	}

	p { 
		text-wrap: balance;
	}

	li {
		list-style-type: none;
	}

	.bg-blur {
		background-color: var(--color-bg-op);
	}
	
</style>
