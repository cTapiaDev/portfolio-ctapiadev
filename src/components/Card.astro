---
import Pill from './Pill.astro';

interface Props {
    dateStart: string;
    dateEnd?: string;
    title: string;
    name: string;
    description: string;
    description2?: string;
    description3?: string;
    skills?: Array<string>;
}

const { dateStart, dateEnd = "Presente", title, name, description, description2, description3, skills } = Astro.props as Props;
---

<div class="group relative grid pb-1 transition-all sm:grid-cols-8 sm:gap-8 md:gap-4 lg:hover:!opacity-100 lg:group-hover/list:opacity-50">
    <div class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition motion-reduce:transition-none lg:-inset-x-6 lg:block lg:group-hover:bg-slate-800/50 lg:group-hover:shadow-[inset_0_1px_0_0_rgba(148, 163, 184, 0.1)] lg:group-hover:drop-shadow-lg"></div>
    <header class="z-10 mb-2 mt-1 text-xs font-semibold uppercase ctracking-wide text-slate-500 sm:col-span-2">
        { dateStart } — { dateEnd }
    </header>
    <div class="z-10 sm:col-span-6">
        <h3 class="font-medium leading-snug text-slate-200">{ title } — { name }</h3>
        <p class="mt-2 text-sm leading-normal">{ description }</p>
        <p class="mt-2 text-sm leading-normal">{ description2 }</p>
        <p class="mt-2 text-sm leading-normal">{ description3 }</p>
        <ul class="mt-2 flex flex-wrap">
            {skills.map((skill) => (
                <li class="mr-1.5 mt-2">
                    <Pill>{ skill }</Pill>
                </li>
            ))}
        </ul>
    </div>
</div>

<style>
    .group:hover h3 {
        color: var(--color-pill);
    }
</style>