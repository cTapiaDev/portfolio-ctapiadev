---
interface Props {
    href: string;
    title: string;
}

const { href, title } = Astro.props as Props;
---

<li class="mr-5 text-xs shrink-0">
    <a class="block" href=`${href}` target="__blank" title=`${title}`>
        <slot />
    </a>
</li>

<style>
    a:hover {
        color: var(--color-primary);
    }
</style>